<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.flightscheduler.MainActivity">

    <Button
        android:id="@+id/addplane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="157dp"
        android:onClick="addPlane"
        android:text="Add Plane" />

    <Button
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addplane"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:onClick="checkSchedule"
        android:text="Check Schedule" />
</android.widget.RelativeLayout>
